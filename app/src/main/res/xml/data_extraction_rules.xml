<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="sharedpref" path="user_preferences.xml"/>
        <exclude domain="database" path="webcam_app_db"/>
        <exclude domain="file" path="recordings/"/>
        <exclude domain="file" path="thumbnails/"/>
    </cloud-backup>
    <device-transfer>
        <!-- Allow device transfer for non-sensitive data -->
        <exclude domain="sharedpref" path="user_preferences.xml"/>
        <exclude domain="database" path="webcam_app_db"/>
        <exclude domain="file" path="recordings/"/>
        <exclude domain="file" path="thumbnails/"/>
    </device-transfer>
</data-extraction-rules>